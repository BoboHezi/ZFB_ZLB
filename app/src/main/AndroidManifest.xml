<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eli.zfb_zlb">

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/appicon"
        android:label="支付宝"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".act.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".act.SearchActivity"
            android:windowSoftInputMode="adjustPan" />

        <activity android:name=".act.ZlbHomeActivity" />

        <activity android:name=".act.VerifyActivity"></activity>

        <activity android:name=".util.VerifyConfirmActivity"></activity>

        <activity android:name=".act.CameraActivity"></activity>

        <activity android:name=".act.MarriageActivity"></activity>
    </application>

</manifest>